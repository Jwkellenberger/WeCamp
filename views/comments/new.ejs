<% include ../partials/header %>

<div class='container'>
    <header class="lessJumboTron">
        <div class="row">
            <h1 style="text-align: center">Add New Comment to: <%= campground.name%></h1>
            <div class="formDiv">
                <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                    <div class="form-group">
                        <label for="comment[text]"  class="labelAlign">Comment text:</label>
                        <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-lg btn-default btn-block" type=submit>
                    </div>
                </form>
                <a href='/campgrounds'>Go Back</a>
            </div>
        </div>
    </header>
</div>
    
<% include ../partials/footer %>