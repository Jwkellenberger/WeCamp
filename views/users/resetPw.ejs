<% include ../partials/header %>

<div class='container'>
    <header class="lessJumboTron">
        <div class="row">
            <h1 style="text-align: center">Forgot your password?</h1>
            <div class="formDiv">
                <form action="/user/reset/<%=token%>" method="POST">
                    <div class="form-group">
                        <label for="password"  class="labelAlign">Password:</label>
                        <input class="form-control" type="password" name="password" placeholder="password" autofocus required>
                    </div>
                    <div class="form-group">
                        <label for="confirm"  class="labelAlign">Confirm password:</label>
                        <input class="form-control" type="password" name="confirm" placeholder="confirm password" required>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-lg btn-default btn-block" type=submit>
                    </div>
                </form>
                <a href='/campgrounds'>Go Back</a>
            </div>
        </div>
    </header>
</div>
    
<% include ../partials/footer %>