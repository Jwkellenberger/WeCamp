<% include ../partials/header %>

<div class="container">
    
    <div class="col-md-2">
        <p class='lead'>WeCamp</p>
        <div class="list-group">
            <li class='list-group-item active'>Info</li>
            <li class='list-group-item'>Info</li>
            <li class='list-group-item'>Info</li>
        </div>
    </div>
    
    <div class="col-md-10">
    <div class="thumbnail">
        <img class="img-responsive cstm-img-rounded" src="<%= campground.image%>">
        <div class="caption">
            <h4 class="pull-right"><em>Submitted By: <%= campground.author.username%></em></h4>
            <!--<h4 class="pull-right">$9.99/night</h4>-->
            <h4><a><%= campground.name%></a></h4>
            <p><%= campground.description%></p>
                <!-- if there is not a currently logged in user, don't evaluate if statement -->
                <% if(currentUser && campground.author.id.equals(currentUser._id)){%>
                    <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id%>/edit">Edit!</a>
                    <form class="inline-elem" action="/campgrounds/<%= campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                <% } %>

        </div>
    </div>    
    
    <!--comments-->
    <div class="well">
        <div class="text-right">
            <a class="btn btn-xs btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add Comment</a>
        </div>
        <hr>
        <% campground.comments.forEach(function(comment){ %>
            <div class="row">
                <div class='col-md-12'>
                    <p><strong><%= comment.author.username%></strong>:</p>
                </div>
                <span class="pull-right">
                    10 days ago
                </span>
                <p><%= comment.text%></p>
                
                <% if(currentUser && comment.author.id.equals(currentUser._id)){%>
                    <a class="btn btn-xs btn-warning margin-bot" 
                        href="/campgrounds/<%= campground._id%>/comments/<%= comment._id%>/edit">Edit</a>
                    <form class="inline-elem" action="/campgrounds/<%= campground._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                        <input class="btn btn-xs btn-danger margin-bot" type='submit' value='Delete'>
                    </form>
                <% } %>
            </div>
                
        <% });%>
        
    </div>
    
    </div>

</div>

<% include ../partials/footer %>