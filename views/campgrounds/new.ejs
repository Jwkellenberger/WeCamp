<% include ../partials/header %>

<div class='container'>
    <header class="lessJumboTron">
        <div class="row">
            <h1 style="text-align: center">Create a new Campground!</h1>
            <div class="formDiv">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <label for="name" class="labelAlign">Name:</label>
                        <input class="form-control" type="text" name="name" placeholder="name">
                    </div>
                    <div class="form-group">
                        <label for="image"  class="labelAlign">Image Url:</label>
                        <input class="form-control" type="text" name="image" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <label for="description"  class="labelAlign">Description:</label>
                        <input class="form-control" type="text" name="description" placeholder="description">
                    </div>
                    <div class="form-group">
                        <label for="location"  class="labelAlign">Location:</label>
                        <input class="form-control" type="text" name="location" id="location" placeholder="location">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-lg btn-default btn-block" type=submit>
                    </div>
                    
                </form>
                <a href='/campgrounds'>Go Back</a>
            </div>
        </div>
    </header>
    
</div>
    
<% include ../partials/footer %>